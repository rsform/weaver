{
  "lexicon": 1,
  "id": "sh.weaver.actor.searchActors",
  "defs": {
    "main": {
      "type": "query",
      "description": "Find actors matching search criteria.",
      "parameters": {
        "type": "params",
        "required": [
          "q"
        ],
        "properties": {
          "cursor": {
            "type": "string"
          },
          "limit": {
            "type": "integer",
            "default": 25,
            "minimum": 1,
            "maximum": 100
          },
          "q": {
            "type": "string",
            "description": "Search query - matches handle, display name, description.",
            "minLength": 1,
            "maxLength": 100
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "actors"
          ],
          "properties": {
            "actors": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "sh.weaver.actor.defs#profileView"
              }
            },
            "cursor": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}