{
  "lexicon": 1,
  "id": "sh.weaver.graph.getActorLists",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get lists created by an actor.",
      "parameters": {
        "type": "params",
        "required": [
          "actor"
        ],
        "properties": {
          "actor": {
            "type": "string",
            "format": "at-identifier"
          },
          "cursor": {
            "type": "string"
          },
          "limit": {
            "type": "integer",
            "default": 50,
            "minimum": 1,
            "maximum": 100
          },
          "purpose": {
            "type": "string",
            "description": "Filter by list purpose."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "lists"
          ],
          "properties": {
            "cursor": {
              "type": "string"
            },
            "lists": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "sh.weaver.graph.defs#listView"
              }
            }
          }
        }
      }
    }
  }
}