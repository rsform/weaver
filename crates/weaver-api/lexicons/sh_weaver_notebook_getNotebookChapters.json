{
  "lexicon": 1,
  "id": "sh.weaver.notebook.getNotebookChapters",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get all chapters for a notebook.",
      "parameters": {
        "type": "params",
        "required": [
          "notebook"
        ],
        "properties": {
          "cursor": {
            "type": "string"
          },
          "limit": {
            "type": "integer",
            "default": 50,
            "minimum": 1,
            "maximum": 100
          },
          "notebook": {
            "type": "string",
            "format": "at-uri"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "chapters"
          ],
          "properties": {
            "chapters": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "sh.weaver.notebook.defs#chapterView"
              }
            },
            "cursor": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}