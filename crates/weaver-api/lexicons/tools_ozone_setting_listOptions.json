{
  "lexicon": 1,
  "id": "tools.ozone.setting.listOptions",
  "defs": {
    "main": {
      "type": "query",
      "description": "List settings with optional filtering",
      "parameters": {
        "type": "params",
        "properties": {
          "cursor": {
            "type": "string"
          },
          "keys": {
            "type": "array",
            "description": "Filter for only the specified keys. Ignored if prefix is provided",
            "items": {
              "type": "string",
              "format": "nsid"
            },
            "maxLength": 100
          },
          "limit": {
            "type": "integer",
            "default": 50,
            "minimum": 1,
            "maximum": 100
          },
          "prefix": {
            "type": "string",
            "description": "Filter keys by prefix"
          },
          "scope": {
            "type": "string",
            "default": "instance",
            "knownValues": [
              "instance",
              "personal"
            ]
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "options"
          ],
          "properties": {
            "cursor": {
              "type": "string"
            },
            "options": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "tools.ozone.setting.defs#option"
              }
            }
          }
        }
      }
    }
  }
}