{
  "lexicon": 1,
  "id": "sh.weaver.notebook.searchEntries",
  "defs": {
    "main": {
      "type": "query",
      "description": "Full-text search for entries with optional author and tag filtering.",
      "parameters": {
        "type": "params",
        "required": [
          "q"
        ],
        "properties": {
          "author": {
            "type": "string",
            "format": "at-identifier"
          },
          "cursor": {
            "type": "string"
          },
          "limit": {
            "type": "integer",
            "default": 25,
            "minimum": 1,
            "maximum": 100
          },
          "q": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "maxLength": 10
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "entries"
          ],
          "properties": {
            "cursor": {
              "type": "string"
            },
            "entries": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "sh.weaver.notebook.defs#entryView"
              }
            }
          }
        }
      }
    }
  }
}