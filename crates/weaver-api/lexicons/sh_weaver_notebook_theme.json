{
  "lexicon": 1,
  "id": "sh.weaver.notebook.theme",
  "defs": {
    "codeThemeFile": {
      "type": "object",
      "description": "Custom syntax highlighting theme file (sublime text/textmate theme format)",
      "required": [
        "name",
        "did",
        "content"
      ],
      "properties": {
        "content": {
          "type": "blob",
          "accept": [
            "*/*"
          ],
          "maxSize": 20000
        },
        "did": {
          "type": "string",
          "format": "did"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "codeThemeName": {
      "type": "string"
    },
    "font": {
      "type": "object",
      "required": [
        "value"
      ],
      "properties": {
        "value": {
          "type": "union",
          "description": "Font for a notebook",
          "refs": [
            "#fontName",
            "#fontFile"
          ]
        }
      }
    },
    "fontFile": {
      "type": "object",
      "description": "Custom woff(2) or ttf font file",
      "required": [
        "name",
        "did",
        "content"
      ],
      "properties": {
        "content": {
          "type": "blob",
          "accept": [
            "*/*"
          ],
          "maxSize": 20000
        },
        "did": {
          "type": "string",
          "format": "did"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "fontName": {
      "type": "string"
    },
    "main": {
      "type": "record",
      "description": "Theme for a notebook",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "darkScheme",
          "lightScheme",
          "fonts",
          "spacing",
          "darkCodeTheme",
          "lightCodeTheme"
        ],
        "properties": {
          "darkCodeTheme": {
            "type": "union",
            "description": "Syntax highlighting theme for dark mode",
            "refs": [
              "#codeThemeName",
              "#codeThemeFile"
            ]
          },
          "darkScheme": {
            "type": "ref",
            "description": "Reference to a dark colour scheme",
            "ref": "com.atproto.repo.strongRef"
          },
          "defaultTheme": {
            "type": "string",
            "default": "auto",
            "enum": [
              "light",
              "dark",
              "auto"
            ]
          },
          "fonts": {
            "type": "object",
            "description": "Fonts to be used in the notebook. Can specify a name or list of names (will load if available) or a file or list of files for each. Empty lists will use site defaults.",
            "required": [
              "body",
              "heading",
              "monospace"
            ],
            "properties": {
              "body": {
                "type": "array",
                "items": {
                  "type": "ref",
                  "ref": "#font"
                }
              },
              "heading": {
                "type": "array",
                "items": {
                  "type": "ref",
                  "ref": "#font"
                }
              },
              "monospace": {
                "type": "array",
                "items": {
                  "type": "ref",
                  "ref": "#font"
                }
              }
            }
          },
          "lightCodeTheme": {
            "type": "union",
            "description": "Syntax highlighting theme for light mode",
            "refs": [
              "#codeThemeName",
              "#codeThemeFile"
            ]
          },
          "lightScheme": {
            "type": "ref",
            "description": "Reference to a light colour scheme",
            "ref": "com.atproto.repo.strongRef"
          },
          "spacing": {
            "type": "object",
            "required": [
              "baseSize",
              "lineHeight",
              "scale"
            ],
            "properties": {
              "baseSize": {
                "type": "string"
              },
              "lineHeight": {
                "type": "string"
              },
              "scale": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}