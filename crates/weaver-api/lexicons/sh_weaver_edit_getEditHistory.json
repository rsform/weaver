{
  "lexicon": 1,
  "id": "sh.weaver.edit.getEditHistory",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get edit history (roots and diffs) for a resource.",
      "parameters": {
        "type": "params",
        "required": [
          "resource"
        ],
        "properties": {
          "afterRkey": {
            "type": "string",
            "description": "Only diffs after this rkey (incremental sync)"
          },
          "cursor": {
            "type": "string"
          },
          "limit": {
            "type": "integer",
            "default": 50,
            "minimum": 1,
            "maximum": 100
          },
          "resource": {
            "type": "string",
            "format": "at-uri"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "roots",
            "diffs"
          ],
          "properties": {
            "cursor": {
              "type": "string"
            },
            "diffs": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "sh.weaver.edit.defs#editHistoryEntry"
              }
            },
            "roots": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "sh.weaver.edit.defs#editHistoryEntry"
              }
            }
          }
        }
      }
    }
  }
}