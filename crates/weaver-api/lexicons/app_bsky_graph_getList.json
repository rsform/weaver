{
  "lexicon": 1,
  "id": "app.bsky.graph.getList",
  "defs": {
    "main": {
      "type": "query",
      "description": "Gets a 'view' (with additional context) of a specified list.",
      "parameters": {
        "type": "params",
        "required": [
          "list"
        ],
        "properties": {
          "cursor": {
            "type": "string"
          },
          "limit": {
            "type": "integer",
            "default": 50,
            "minimum": 1,
            "maximum": 100
          },
          "list": {
            "type": "string",
            "description": "Reference (AT-URI) of the list record to hydrate.",
            "format": "at-uri"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "list",
            "items"
          ],
          "properties": {
            "cursor": {
              "type": "string"
            },
            "items": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "app.bsky.graph.defs#listItemView"
              }
            },
            "list": {
              "type": "ref",
              "ref": "app.bsky.graph.defs#listView"
            }
          }
        }
      }
    }
  }
}