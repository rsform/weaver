{
  "lexicon": 1,
  "id": "blog.pckt.block.taskItem",
  "description": "Individual task item with checkbox state.",
  "defs": {
    "main": {
      "type": "object",
      "required": [
        "checked",
        "content"
      ],
      "properties": {
        "checked": {
          "type": "boolean",
          "description": "Whether the task is completed"
        },
        "content": {
          "type": "array",
          "description": "Array of text blocks",
          "items": {
            "type": "union",
            "refs": [
              "blog.pckt.block.text"
            ],
            "closed": false
          }
        }
      }
    }
  }
}