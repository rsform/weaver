{
  "lexicon": 1,
  "id": "sh.weaver.notebook.getBookEntry",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get an entry view by notebook URI and index, including prev/next navigation within the book.",
      "parameters": {
        "type": "params",
        "required": [
          "notebook"
        ],
        "properties": {
          "index": {
            "type": "integer",
            "description": "Zero-based index of the entry in the notebook's entry list.",
            "default": 0,
            "minimum": 0
          },
          "notebook": {
            "type": "string",
            "description": "AT-URI of the notebook containing the entry.",
            "format": "at-uri"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "ref",
          "ref": "sh.weaver.notebook.defs#bookEntryView"
        }
      },
      "errors": [
        {
          "name": "NotebookNotFound"
        },
        {
          "name": "EntryNotFound"
        }
      ]
    }
  }
}