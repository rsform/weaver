{
  "lexicon": 1,
  "id": "tools.ozone.communication.defs",
  "defs": {
    "templateView": {
      "type": "object",
      "required": [
        "id",
        "name",
        "contentMarkdown",
        "disabled",
        "lastUpdatedBy",
        "createdAt",
        "updatedAt"
      ],
      "properties": {
        "contentMarkdown": {
          "type": "string",
          "description": "Subject of the message, used in emails."
        },
        "createdAt": {
          "type": "string",
          "format": "datetime"
        },
        "disabled": {
          "type": "boolean"
        },
        "id": {
          "type": "string"
        },
        "lang": {
          "type": "string",
          "description": "Message language.",
          "format": "language"
        },
        "lastUpdatedBy": {
          "type": "string",
          "description": "DID of the user who last updated the template.",
          "format": "did"
        },
        "name": {
          "type": "string",
          "description": "Name of the template."
        },
        "subject": {
          "type": "string",
          "description": "Content of the template, can contain markdown and variable placeholders."
        },
        "updatedAt": {
          "type": "string",
          "format": "datetime"
        }
      }
    }
  }
}