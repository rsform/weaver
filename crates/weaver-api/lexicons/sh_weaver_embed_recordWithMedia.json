{
  "lexicon": 1,
  "id": "sh.weaver.embed.recordWithMedia",
  "description": "A representation of a record embedded in a Weaver record (eg, a notebook entry), alongside other compatible embeds. For example, a quote post and image, or a quote post and external URL card.",
  "defs": {
    "main": {
      "type": "object",
      "required": [
        "record",
        "media"
      ],
      "properties": {
        "media": {
          "type": "union",
          "refs": [
            "sh.weaver.embed.images",
            "sh.weaver.embed.external",
            "sh.weaver.embed.video",
            "app.bsky.embed.images",
            "app.bsky.embed.video",
            "app.bsky.embed.external"
          ]
        },
        "record": {
          "type": "union",
          "refs": [
            "app.bsky.embed.record",
            "sh.weaver.embed.records"
          ]
        }
      }
    },
    "view": {
      "type": "object",
      "required": [
        "record",
        "media"
      ],
      "properties": {
        "media": {
          "type": "union",
          "refs": [
            "sh.weaver.embed.images#view",
            "sh.weaver.embed.external#view",
            "sh.weaver.embed.video#view",
            "app.bsky.embed.images#view",
            "app.bsky.embed.video#view",
            "app.bsky.embed.external#view"
          ]
        },
        "record": {
          "type": "union",
          "refs": [
            "sh.weaver.embed.records#view",
            "app.bsky.embed.record#view"
          ]
        }
      }
    }
  }
}