{
  "lexicon": 1,
  "id": "tools.ozone.moderation.getRecord",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get details about a record.",
      "parameters": {
        "type": "params",
        "required": [
          "uri"
        ],
        "properties": {
          "cid": {
            "type": "string",
            "format": "cid"
          },
          "uri": {
            "type": "string",
            "format": "at-uri"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "ref",
          "ref": "tools.ozone.moderation.defs#recordViewDetail"
        }
      },
      "errors": [
        {
          "name": "RecordNotFound"
        }
      ]
    }
  }
}