{
  "lexicon": 1,
  "id": "sh.weaver.graph.getTagSuggestions",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get tag suggestions for autocomplete or based on existing tags.",
      "parameters": {
        "type": "params",
        "properties": {
          "existingTags": {
            "type": "array",
            "description": "Tags already on the resource, to suggest related tags.",
            "items": {
              "type": "string"
            },
            "maxLength": 20
          },
          "limit": {
            "type": "integer",
            "default": 20,
            "minimum": 1,
            "maximum": 50
          },
          "query": {
            "type": "string",
            "description": "Partial tag for autocomplete.",
            "maxLength": 128
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "suggestions"
          ],
          "properties": {
            "suggestions": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "sh.weaver.graph.defs#tagView"
              }
            }
          }
        }
      }
    }
  }
}