{
  "lexicon": 1,
  "id": "sh.weaver.notebook.getNotebookChapters",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get all chapters for a notebook.",
      "parameters": {
        "type": "params",
        "required": ["notebook"],
        "properties": {
          "notebook": { "type": "string", "format": "at-uri" },
          "limit": { "type": "integer", "minimum": 1, "maximum": 100, "default": 50 },
          "cursor": { "type": "string" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["chapters"],
          "properties": {
            "chapters": {
              "type": "array",
              "items": { "type": "ref", "ref": "sh.weaver.notebook.defs#chapterView" }
            },
            "cursor": { "type": "string" }
          }
        }
      }
    }
  }
}
