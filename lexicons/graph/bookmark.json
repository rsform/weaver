{
  "lexicon": 1,
  "id": "sh.weaver.graph.bookmark",
  "defs": {
    "main": {
      "type": "record",
      "description": "Bookmark a notebook or entry for later reading.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["subject", "createdAt"],
        "properties": {
          "subject": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef",
            "description": "The notebook or entry being bookmarked."
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "note": {
            "type": "string",
            "maxGraphemes": 300,
            "maxLength": 3000,
            "description": "Optional private note about why you saved this."
          }
        }
      }
    }
  }
}
