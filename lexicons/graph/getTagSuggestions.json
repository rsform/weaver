{
  "lexicon": 1,
  "id": "sh.weaver.graph.getTagSuggestions",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get tag suggestions for autocomplete or based on existing tags.",
      "parameters": {
        "type": "params",
        "properties": {
          "query": {
            "type": "string",
            "maxLength": 128,
            "description": "Partial tag for autocomplete."
          },
          "existingTags": {
            "type": "array",
            "maxLength": 20,
            "items": { "type": "string" },
            "description": "Tags already on the resource, to suggest related tags."
          },
          "limit": { "type": "integer", "minimum": 1, "maximum": 50, "default": 20 }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["suggestions"],
          "properties": {
            "suggestions": {
              "type": "array",
              "items": { "type": "ref", "ref": "sh.weaver.graph.defs#tagView" }
            }
          }
        }
      }
    }
  }
}
