{
  "lexicon": 1,
  "id": "sh.weaver.graph.getFollowers",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get followers of an actor (accepted follows only).",
      "parameters": {
        "type": "params",
        "required": ["actor"],
        "properties": {
          "actor": { "type": "string", "format": "at-identifier" },
          "limit": { "type": "integer", "minimum": 1, "maximum": 100, "default": 50 },
          "cursor": { "type": "string" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["subject", "followers"],
          "properties": {
            "subject": { "type": "ref", "ref": "sh.weaver.actor.defs#profileViewBasic" },
            "followers": {
              "type": "array",
              "items": { "type": "ref", "ref": "sh.weaver.actor.defs#profileViewBasic" }
            },
            "cursor": { "type": "string" }
          }
        }
      }
    }
  }
}
