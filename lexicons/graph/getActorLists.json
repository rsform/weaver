{
  "lexicon": 1,
  "id": "sh.weaver.graph.getActorLists",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get lists created by an actor.",
      "parameters": {
        "type": "params",
        "required": ["actor"],
        "properties": {
          "actor": { "type": "string", "format": "at-identifier" },
          "purpose": {
            "type": "string",
            "description": "Filter by list purpose."
          },
          "limit": { "type": "integer", "minimum": 1, "maximum": 100, "default": 50 },
          "cursor": { "type": "string" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["lists"],
          "properties": {
            "lists": {
              "type": "array",
              "items": { "type": "ref", "ref": "sh.weaver.graph.defs#listView" }
            },
            "cursor": { "type": "string" }
          }
        }
      }
    }
  }
}
