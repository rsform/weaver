{
  "lexicon": 1,
  "id": "sh.weaver.notification.getUnreadCount",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get count of unread notifications for the authenticated user.",
      "parameters": {
        "type": "params",
        "properties": {
          "seenAt": {
            "type": "string",
            "format": "datetime",
            "description": "Count notifications after this timestamp."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["count"],
          "properties": {
            "count": { "type": "integer" }
          }
        }
      }
    }
  }
}
