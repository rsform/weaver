{
  "lexicon": 1,
  "id": "sh.weaver.collab.accept",
  "defs": {
    "main": {
      "type": "record",
      "description": "Acceptance of a collaboration invite. Completes the two-way agreement.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["invite", "resource", "createdAt"],
        "properties": {
          "invite": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef",
            "description": "Reference to the invite record being accepted."
          },
          "resource": {
            "type": "string",
            "format": "at-uri",
            "description": "URI of the resource (denormalized for easier querying)."
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}
