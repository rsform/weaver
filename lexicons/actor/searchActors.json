{
  "lexicon": 1,
  "id": "sh.weaver.actor.searchActors",
  "defs": {
    "main": {
      "type": "query",
      "description": "Find actors matching search criteria.",
      "parameters": {
        "type": "params",
        "required": ["q"],
        "properties": {
          "q": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Search query - matches handle, display name, description."
          },
          "limit": { "type": "integer", "minimum": 1, "maximum": 100, "default": 25 },
          "cursor": { "type": "string" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["actors"],
          "properties": {
            "actors": {
              "type": "array",
              "items": { "type": "ref", "ref": "sh.weaver.actor.defs#profileView" }
            },
            "cursor": { "type": "string" }
          }
        }
      }
    }
  }
}
