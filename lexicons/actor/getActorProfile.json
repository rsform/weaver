{
  "lexicon": 1,
  "id": "sh.weaver.actor.getActorProfile",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get a Weaver profile with notebook/entry statistics.",
      "parameters": {
        "type": "params",
        "required": ["actor"],
        "properties": {
          "actor": { "type": "string", "format": "at-identifier" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["profile", "notebookCount", "entryCount"],
          "properties": {
            "profile": { "type": "ref", "ref": "sh.weaver.actor.defs#profileView" },
            "notebookCount": { "type": "integer" },
            "entryCount": { "type": "integer" },
            "collaborationCount": { "type": "integer" },
            "followerCount": { "type": "integer" },
            "followingCount": { "type": "integer" },
            "viewerFollowing": { "type": "string", "format": "at-uri" },
            "viewerFollowedBy": { "type": "string", "format": "at-uri" }
          }
        }
      }
    }
  }
}
